<AnchorPane prefHeight="405.0" prefWidth="345.0" styleClass="root-pane" stylesheets="@css/login.css" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/" fx:controller="me.project.mosaic.login.LoginController">
   <children>
      <AnchorPane layoutX="20.0" layoutY="28.0" prefHeight="349.0" prefWidth="306.0" styleClass="background" stylesheets="@css/login.css">
         <children>
            <JFXTextField fx:id="emailField" focusColor="#add7ff" layoutX="31.0" layoutY="110.0" prefHeight="26.0" prefWidth="245.0" promptText="Email" styleClass="inputs" stylesheets="@css/login.css" unFocusColor="#c3b7b7" />
            <JFXPasswordField fx:id="passwordField" focusColor="#add7ff" layoutX="31.0" layoutY="185.0" prefHeight="26.0" prefWidth="245.0" promptText="Senha" styleClass="inputs" stylesheets="@css/login.css" unFocusColor="#c3b7b7" />
